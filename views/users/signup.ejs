<% layout("/layouts/boilerplate") %>

<div class="row">
    <h1 class="col-6 offset-3 mt-3 mb-3">Signup on Wanderlust</h1>
    <div class="col-6 offset-3">
        <form action="/signup" method="post" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input 
                    type="text" 
                    name="username"
                    id="username" 
                    class="form-control" 
                    required
                >
                <div class="invalid-feedback"> Look good !</div>
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input 
                    type="email" 
                    name="email"
                    id="email" 
                    class="form-control" 
                    required
                >
                <div class="invalid-feedback"> Look good !</div>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input 
                    type="password" 
                    name="password"
                    id="password" 
                    class="form-control" 
                    required
                >
                <div class="invalid-feedback"> Look good !</div>
            </div>
            <div class="mb-3">
                <button class="mb-3 btn btn-success">SignUp</button>
            </div>
        </form>
    </div>
</div>